---
import type { Post } from '../interfaces/post';
const posts = Astro.props.posts as Post[];
const news = posts.slice(1, 4);
---
<section class="news pt-10 px-6 bg-very-dark-blue text-silver col-start-1 col-end-4 md:col-start-3 md:col-end-4">
  <h2 class="text-soft-orange text-5xl font-bold">New</h2>
  <div class="pt-10">
    <ul class="flex flex-col gap-6">
      {news.map(({excerpt, title, slug}:Post) => (
        <li class="not-last-of-type:border-b border-silver/40 flex flex-col gap-2 pb-6">
          <h3 class="text-xl font-bold text-white"><a class="hover:text-soft-orange transition-all hover:underline underline-offset-4" href={`/post/${slug}`}>{ title }</a></h3>
          <p class="leading-8 font-thin">{ excerpt }</p>
        </li>
      ))}
    </ul>
  </div>
</section>