---
export interface HeroProps {
  title: string;
  heroImgDesktopUrl?: string;
  heroImgMobileUrl?: string;
  heroContent?: string;
  heroPostUrl?: string;
}

const { title, heroImgDesktopUrl, heroImgMobileUrl, heroContent, heroPostUrl } = Astro.props as HeroProps;

console.log(heroPostUrl)

---
<section class="hero col-start-1 col-end-4 md:col-start-1 md:col-end-3">
  
    <div class="md:col-span-2 col-start-1 col-end-3">
      <picture>
        <source srcset={heroImgDesktopUrl} class="w-full h-full hidden object-cover md:block" media="(min-width: 40rem)" />
        <img src={heroImgMobileUrl} alt="Abstract wooden colored puzzle">
      </picture>
    </div>
  <div class=" col-span-2 grid md:grid-cols-2 gap-6 mt-10">
    <h1 class="text-6xl font-black text-very-dark-blue">{ title }</h1>
    {heroContent &&
      <div class="">
        <p class="leading-8">{heroContent}</p>
        <a href={heroPostUrl} class="bg-soft-red inline-block uppercase font-bold tracking-[.4em] mt-10 hover:bg-very-dark-blue hover:text-off-white py-4 px-8 text-very-dark-blue">Read More</a>
      </div>
    }
  </div>
</section>

